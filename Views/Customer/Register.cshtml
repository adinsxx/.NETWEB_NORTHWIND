@using Northwind.Models;
@model Northwind.Models.Customer;

<h1>Register today!</h1>
<p>Customer's that register get priority access to our latest discounts!</p>

<div class="jumbotron my-2 border border-secondary">
    <form asp-action="Index" asp-controller="Home">
        <div asp-validation-summary="All" class="form-row">
            <div class="col-md-6 mb-3">
                <label asp-for="CompanyName">Company Name</label>
                <input asp-for="CompanyName" placeholder="Enter name" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Address">Address</label>
                <input asp-for="Address" placeholder="Enter address" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="City">City</label>
                <input asp-for="City" placeholder="Enter city" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Region">Region</label>
                <input asp-for="Region" placeholder="Enter region" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="PostalCode">Postal Code</label>
                <input asp-for="PostalCode" placeholder="Enter postal code" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Country">Country</label>
                <input asp-for="Country" placeholder="Enter country" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Phone">Phone</label>
                <input asp-for="Phone" placeholder="Enter phone number" />
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Fax">Fax</label>
                <input asp-for="Fax" placeholder="Enter fax number" />
            </div>
            <button class="submit btn btn-primary" type="submit">Submit</button>
        </div>
    </form>
</div>
